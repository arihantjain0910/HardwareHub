<% layout("./layouts/boilerplate") -%>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <form
        action="/assets/<%= assets._id %>?_method=PUT"
        method="post"
        novalidate
        class="needs-validation"
        id="editForm-<%= assets._id %>"
      >
        <div class="mt-3">
          <h4>Edit Your Assets</h4>
        </div>
        <div class="row">
          <div class="mb-3 col-3">
            <label for="serialNo" class="form-label">Serial Number</label>
            <input
              class="form-control"
              type="text"
              name="serialNo"
              id="serialNo"
              value="<%= assets.serialNo %>"
              required
            />
            <div class="invalid-feedback">Please Enter serial no</div>
          </div>

          <div class="mb-3 col-3">
            <label for="location" class="form-label">Location</label>
            <input
              class="form-control"
              type="text"
              name="location"
              id="location"
              value="<%= assets.location %>"
              required
            />
            <div class="invalid-feedback">Please Enter location</div>
          </div>
          <div class="mb-3 col-3">
            <label for="category" class="form-label">Category</label>
            <input
              class="form-control"
              type="text"
              name="category"
              id="category"
              value="<%= assets.category %>"
              required
            />

            <div class="invalid-feedback">Please Enter category</div>
          </div>
          <div class="mb-3 col-3">
            <label for="manufacturer" class="form-label">Manufacturer</label>
            <input
              class="form-control"
              type="text"
              name="manufacturer"
              id="manufacturer"
              value="<%= assets.manufacturer %>"
              required
            />
            <div class="invalid-feedback">Please Enter manufacturer</div>
          </div>
          <div class="mb-3 col-3">
            <label for="model" class="form-label">Model</label>
            <input
              class="form-control"
              type="text"
              name="model"
              id="model"
              value="<%= assets.model %>"
              required
            />
            <div class="invalid-feedback">Please Enter model</div>
          </div>
          <div class="mb-3 col-3">
            <label for="modelNo" class="form-label">Model No</label>
            <input
              class="form-control"
              type="text"
              name="modelNo"
              id="modelNo"
              value="<%= assets.modelNo %>"
              required
            />
            <div class="invalid-feedback">Please Enter model No</div>
          </div>
          <div class="mb-3 col-3">
            <label for="employeeCode" class="form-label">Employee Code</label>
            <input
              class="form-control"
              type="text"
              name="employeeCode"
              id="employeeCode"
              value="<%= assets.employeeCode %>"
              required
            />
            <div class="invalid-feedback">Please Enter employee code</div>
          </div>
          <div class="mb-3 col-3">
            <label for="employeeName" class="form-label">Employee Name</label>
            <input
              class="form-control"
              type="text"
              name="employeeName"
              id="employeeName"
              value="<%= assets.employeeName %>"
              required
            />
            <div class="invalid-feedback">Please Enter employee name</div>
          </div>
          <div class="mb-3 col-3">
            <label for="department" class="form-label">Department</label>
            <input
              class="form-control"
              type="text"
              name="department"
              id="department"
              value="<%= assets.department %>"
              required
            />
            <div class="invalid-feedback">Please Enter department</div>
          </div>
          <div class="mb-3 col-3">
            <label for="ram" class="form-label">RAM</label>
            <input
              type="text"
              name="ram"
              id="ram"
              value="<%= assets.ram %>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please Enter RAM</div>
          </div>
          <div class="mb-3 col-3">
            <label for="hdd" class="form-label">HDD</label>
            <input
              type="text"
              name="hdd"
              id="hdd"
              value="<%= assets.hdd %>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please Enter hdd</div>
          </div>
          <div class="mb-3 col-3">
            <label for="processor" class="form-label">Processor</label>
            <input
              class="form-control"
              type="text"
              name="processor"
              id="processor"
              value="<%= assets.processor %>"
              required
            />
            <div class="invalid-feedback">Please Enter processor</div>
          </div>
          <div class="mb-3 col-3">
            <label for="keyboard" class="form-label">Keyboard</label>
            <input
              class="form-control"
              type="text"
              name="keyboard"
              id="keyboard"
              value="<%= assets.keyboard %>"
              required
            />
            <div class="invalid-feedback">Please Enter keyboard</div>
          </div>
          <div class="mb-3 col-3">
            <label for="mouse" class="form-label">Mouse</label>
            <input
              class="form-control"
              type="text"
              name="mouse"
              id="mouse"
              value="<%= assets.mouse %>"
              required
            />
            <div class="invalid-feedback">Please Enter mouse</div>
          </div>
          <div class="mb-3 col-3">
            <label for="ip" class="form-label">IP</label>
            <input
              type="text"
              name="ip"
              id="ip"
              value="<%= assets.ip %>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please Enter ip</div>
          </div>
          <div class="mb-3 col-3">
            <label for="monitor" class="form-label">Monitor</label>
            <input
              type="text"
              name="monitor"
              id="monitor"
              value="<%= assets.monitor %>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please Enter monitor</div>
          </div>
          <div class="mb-3 col-3">
            <label for="os" class="form-label">OS</label>
            <input
              type="text"
              name="os"
              id="os"
              value="<%= assets.os %>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please Enter OS</div>
          </div>
          <div class="mb-3 col-3">
            <label for="antivirus" class="form-label">Antivirus</label>
            <input
              class="form-control"
              type="text"
              name="antivirus"
              id="antivirus"
              value="<%= assets.antivirus %>"
              required
            />
            <div class="invalid-feedback">Please Enter antivirus</div>
          </div>
          <div class="mb-3 col-3">
            <label for="warrenty" class="form-label">Warrenty</label>
            <input
              class="form-control"
              type="text"
              name="warrenty"
              id="warrenty"
              value="<%= assets.warrenty %>"
              required
            />
            <div class="invalid-feedback">Please Enter warrenty</div>
          </div>
          <div class="mb-3 col-3">
            <label for="office" class="form-label">Office</label>
            <input
              class="form-control"
              type="text"
              name="office"
              id="office"
              value="<%= assets.office %>"
              required
            />
            <div class="invalid-feedback">Please Enter office</div>
          </div>
        </div>
        
        <button class="btn btn-dark btn-custom" onclick="confirmsEdit('<%= assets._id %>',event)">Save</button>
      </form>
    </div>
  </div>
  <script>
  function confirmsEdit(assetId, event) {
    event.preventDefault(); // Prevent form from submitting automatically
    if (confirm("Are you sure you want to Edit this asset?")) {
      document.getElementById(`editForm-${assetId}`).submit(); // Submit only if "OK" is clicked
    }
  }
</script>
</body>
